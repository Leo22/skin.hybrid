				<texturefocus border="5">FloorBackFO.png</texturefocus>
				<texturenofocus border="5">FloorBackNF.png</texturenofocus>
				<onleft>5</onleft>
				<onright>66</onright>
				<onup>5</onup>
				<ondown>5</ondown>
			</control>
			<control type="button" id="66">
				<description>Home push button</description>
				<posx>45</posx>
				<posy>0</posy>
				<width>45</width>
				<height>45</height>
				<label>31003</label>
				<font>-</font>
				<onclick>ActivateWindow(home)</onclick>
				<texturefocus border="5">FloorHomeFO.png</texturefocus>
				<texturenofocus border="5">FloorHomeNF.png</texturenofocus>
				<onleft>65</onleft>
				<onright>5</onright>
				<onup>5</onup>
				<ondown>5</ondown>
			</control>
		</control>
		<control type="label">
			<posx>55</posx>
			<posy>5</posy>
			<width>1170</width>
			<height>30</height>
			<font>font30_title</font>
			<textcolor>red</textcolor>
			<scroll>true</scroll>
			<align>center</align>
			<aligny>center</aligny>
			<include>Window_OpenClose_Animation</include>
			<label>[UPPERCASE]$INFO[Control.GetLabel(2)] - $LOCALIZE[5][/UPPERCASE]</label>
		</control>
		<control type="label">
			<posx>10</posx>
			<posy>45</posy>
			<width>1260</width>
			<height>20</height>
			<font>font12_title</font>
			<textcolor>grey2</textcolor>
			<wrapmultiline>true</wrapmultiline>
			<scroll>false</scroll>
			<align>center</align>
			<aligny>center</aligny>
			<include>Window_OpenClose_Animation</include>
			<label>$INFO[Window(home).Property(SettingsItemActive)]</label>
		</control>
		<control type="group">
			<posx>80</posx>
			<posy>20</posy>
			<animation type="WindowOpen" reversible="false">
				<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300" />
				<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
				<effect type="fade" start="100" end="0" time="300" />
			</animation>
			<control type="grouplist" id="3">
				<description>left button area</description>
				<posx>30</posx>
				<posy>120</posy>
				<width>300</width>
				<height>481</height>
				<itemgap>-1</itemgap>
				<onleft>9000</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>3</ondown>
				<animation type="Focus" reversible="false">
					<effect type="zoom" start="80" end="100" center="auto" time="200" />
					<effect type="fade" start="80" end="100" time="200" />
				</animation>
				<animation type="UnFocus" reversible="false">
					<effect type="zoom" start="100" end="80" center="auto" time="200" />
					<effect type="fade" start="100" end="80" time="200" />
				</animation>
			</control>
			<control type="grouplist" id="5">
