				<posx>415</posx>
				<posy>520</posy>
				<width>775</width>
				<height>105</height>
				<font>font12</font>
				<align>justify</align>
				<textcolor>white</textcolor>
				<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
			</control>
		</control>
		<include>BehindDialogFadeOut</include>
		<control type="button" id="10">
